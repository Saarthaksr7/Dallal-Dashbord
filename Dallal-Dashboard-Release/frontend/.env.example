# Dallal Dashboard - Frontend Configuration
# Copy this file to .env and configure with your values

# ====================
# API Configuration
# ====================
# Backend API URL (update for production)
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# ====================
# WebSocket Configuration
# ====================
VITE_WS_URL=ws://localhost:8000

# ====================
# Application Settings
# ====================
VITE_APP_NAME=Dallal Dashboard
VITE_APP_VERSION=2.0.0
VITE_ENVIRONMENT=production  # development, staging, production

# ====================
# Feature Flags
# ====================
VITE_ENABLE_DOCKER=true
VITE_ENABLE_SSH=true
VITE_ENABLE_RDP=true
VITE_ENABLE_TOPOLOGY=true
VITE_ENABLE_ANALYTICS=false

# ====================
# Monitoring & Error Tracking
# ====================
# Sentry (optional)
VITE_SENTRY_DSN=

# Google Analytics (optional)
VITE_GA_TRACKING_ID=

# ====================
# UI Settings
# ====================
VITE_DEFAULT_THEME=dark  # light or dark
VITE_DEFAULT_LANGUAGE=en  # hi, en, ru, fr, nl, ko

# ====================
# Performance
# ====================
#Enable service worker for offline support
VITE_ENABLE_SERVICE_WORKER=false

# API request timeout (milliseconds)
VITE_API_TIMEOUT=30000

# ====================
# Session & Security
# ====================
# Session timeout (minutes)
VITE_SESSION_TIMEOUT=60

# Auto refresh token (minutes before expiry)
VITE_TOKEN_REFRESH_BUFFER=5

# ====================
# Development Settings
# ====================
# Show debug information in UI
VITE_DEBUG_MODE=false

# Enable hot module replacement
VITE_HMR_PORT=5173
